[core]
  excludesfile = ~/.global_ignore
  autocrlf = input
  editor = vim --noplugin
[github]
  user = pablobfonseca
[help]
  autocorrect = 10
[user]
  name = Pablo Fonseca
  email = pablofonseca777@gmail.com
[branch]
  autosetupmerge = always
  autosetuprebase = always
[branch "master"]
  rebase = true
[rebase]
  autosquash = true
[push]
  default = current
[pull]
  default = current
  rebase = true
[color]
  ui = auto
  diff = auto
  branch = auto
  interactive = auto
[color "status"]
  added = green
  changed = yellow
  untracked = cyan
  deleted = red
[alias]
  co = checkout
  st = status -s
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
  cm = commit
  co-pr = !sh -c 'git fetch origin pull/$1/head:pr/$1 && git checkout pr/$1' -
  cleanup = !git remote prune origin && git gc && git clean -df && git stash clear
  ctags = "!sh -c '[ -f .git/hooks/ctags ] || git init; .git/hooks/ctags' git-ctags"
  ds = diff --stat=160,120
  dh1 = diff HEAD~1
  l = log --graph --pretty="tformat:%C(yellow)%h%Creset\\ %Cgreen(%ar)%Creset\\ %C(cyan)<%an>%Creset\\ %C(red)%d%Creset\\ %s"
  fo = fetch origin
[diff "ruby"]
  funcname = "^ *\\(\\(def\\) .*\\)"
[diff]
  mnemonicprefix = true
  algorithm = patience
  tool = vimdiff
[merge]
  tool = fugitive
[mergetool "fugitive"]
  cmd = vim -f -c \"Gdiff\" \"$MERGED\"
  keepBackup = false
[fetch]
  prune = true
[credential]
  helper = osxkeychain
[rerere]
  enabled = true
